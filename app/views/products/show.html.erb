        <i class="fab fa-twitter item-social-media-box-twetter"></i>
      <% end %>
    </li>
    <li>
      <%= link_to "" do %>
        <i class="fab fa-line item-social-media-box-line"></i>
      <% end %>
    </li>
    <li>
      <%= link_to "" do %>
        <i class="fab fa-pinterest item-social-media-box-pinterest"></i>
      <% end %>
    </li>
  </ul>
</div>
